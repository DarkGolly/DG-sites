<article class="post">
  <section class="post-head">
    <h1> <%= @post.title %> </h1>
    <small>
      <time> <%= @post.created_at.to_date.strftime("%d %B, %Y") %> </time>
      <% if user_signed_in? && current_user.admin? %>
        |
        <%= link_to 'Изменить', edit_admin_post_path(@post) %>
        |
        <%= link_to 'Удалить', admin_post_path(@post), method: :delete, data: {confirm: 'Вы уверенны?'} %>
      <% end %>
    </small>
  </section>
  <section class="post-body">
    <%= image_tag @post.avatar.url(:large), class: 'avt-show' if @post.avatar? %>
    <%= @post.summary %>
    <p><%= @post.body %></p>
  </section>
</article>

<%= render 'disqus' %>
