<article class="post">
  <section class="post-head">
    <h2> <%= link_to post.title, post_path(post) %> </h2>
    <small>
      <time> <%= post.created_at.to_date.strftime("%d %B, %Y") %> </time>
      <% if user_signed_in? %>
        |
        <%= link_to 'Изменить', edit_post_path(post) %>
        |
        <%= link_to 'Удалить', post_path(post), method: :delete, data: {confirm: 'Вы уверенны?'} %>
      <% end %>
    </small>
  </section>
  <section class="post-summary clearfix">
    <%= image_tag post.avatar.url(:thumb), class: 'avt-thumbnail thumb' if post.avatar? %>
    <%= post.summary %>
  </section>
</article>
