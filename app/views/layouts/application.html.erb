<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
    </style>
  </head>

  <body class="bbg" >
    <div class="container">
      <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
        <ul class="nav navbar-nav, list-inline">
          <li class="nav-item active">
            <a class="nav-link" href="<%= posts_path %>">Статьи <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="https://vk.com/darkgolly">ВКонтакте</a>
          </li>
          <li class="nav-item">
            <% if user_signed_in? %>
            <%= link_to 'Новая статья', new_admin_post_path, class: 'btn btn-outline-primary btn-sm' %>
            <% cache 'world-of-the-hour', expires_in: 2.second, class: "nav-link"  do %>
              <%= %w(dev mea hell door fuf uwu).sample %>
            <% end %>
          </li>
        </ul>





        <ul class="nav navbar-nav, list-inline">

            <li class="nav-item">
              <%= link_to "Выход", destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Вход", new_user_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Регистрация", new_user_registration_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>

    <div class="container main">
      <div class="row">
        <div class="col-md-12">
          <% flash.each do |name, message| %>
          <div class="alert <%= bootstrap_class_for(name) %>">
            <button class="close" data-dismiss="alert">&times;</button>
            <% message %>
          </div>
          <% end %>
        </div>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
